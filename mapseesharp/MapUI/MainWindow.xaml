<Window x:Class="MapUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700">



    <Grid x:Name="myGrid">
        <Grid.RenderTransform >
            <ScaleTransform ScaleY="-1" CenterY="350" />
        </Grid.RenderTransform>
        <Button x:Name="iterate" Content="Iterate" HorizontalAlignment="Left" Margin="19,73,0,0" VerticalAlignment="Top" Width="75" Click="iterate_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Margin="108,72,0,0" VerticalAlignment="Top" Width="74" Click="reset_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="back" Content="Back (not working!)" HorizontalAlignment="Left" Margin="20,43,0,0" VerticalAlignment="Top" Width="115" Click="back_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="toggleCircles" Content="Toggle circles" HorizontalAlignment="Left" Margin="192,73,0,0" VerticalAlignment="Top" Width="74" Click="toggleCircles_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="toEnd" Content="Iterate to end" HorizontalAlignment="Left" Margin="146,42,0,0" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.5,0.5" Click="toEnd_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="showInput" Content="Show input and copy to clipboard" HorizontalAlignment="Left" Margin="262,42,0,0" VerticalAlignment="Top" Width="196" RenderTransformOrigin="0.5,0.5" Click="showInput_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="showParabolas" Content="Toggle parabolas" HorizontalAlignment="Left" Margin="282,72,0,0" VerticalAlignment="Top" Width="107" Click="showParabolas_Click" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
