<Window x:Class="MapUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700">

    <Grid x:Name="myGrid">
        <Grid.RenderTransform >
            <ScaleTransform ScaleY="-1" CenterY="350" />
        </Grid.RenderTransform>
        <Button x:Name="iterate" Content="Iterate" HorizontalAlignment="Left" Margin="21,10,0,0" VerticalAlignment="Top" Width="75" Click="iterate_Click"/>
        <Button x:Name="reset" Content="Reset" HorizontalAlignment="Left" Margin="114,10,0,0" VerticalAlignment="Top" Width="75" Click="reset_Click"/>
        <Button x:Name="back" Content="Back (not working!)" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Width="115" Click="back_Click"/>
    </Grid>
</Window>
